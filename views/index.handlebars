{{!-- use double curly brackets for pass the variable or do some logic--}}

<h1 class="text-center mb-3">{{title}}</h1>

<form action="/api/datas" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="urlCode">Url Code</label>
        <input type="text" name="urlCode" class="form-control">
    </div>
    <input type="submit" value="Add Book" class="btn btn-primary btn-block">
</form>

<ul class="list-group"}>
    {{!-- #each means array.forEach and /each for close it--}}
    {{#each datas}}
        
        <li class="list-group-item">{{this.name}}: {{this.urlCode}}</li>
    {{/each}}
</ul>

<a href="/api/datas" class="btn btn-light mt-4">More books</a>